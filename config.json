{
    "server": {
        "host": "0.0.0.0",
        "port": 8000,
        "dedicated_cpu": true,
        "num_cpus": 4
    },
    "model": {
        "size": "base",
        "device": "auto",
        "model_dir": "models",
        "supported_formats": [".wav", ".mp3", ".m4a", ".ogg"]
    },
    "deployment": {
        "num_replicas": 4,
        "cpu_per_replica": 0.5,
        "gpu_per_replica": 0.1,
        "max_concurrent_queries": 10
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "file": "whisper_service.log"
    }
}